{
    "name": "Steel_Defect_Detection",
    "n_gpu": 1,

    "_arch": {
        "type": "FirstHalfUNet",
        "args": {
            "in_channels": 1, 
            "out_classes": 4,
            "use_resnet": true
        }
    },
    "arch": {
        "type": "UNet",
        "args": {
            "in_channels": 1,
            "out_classes": 4,
            "use_resnet": true,
            "up_sample_mode": "conv_transpose"
        }
    },
    "data_loader": {
        "type": "ImageDataLoader",
        "args":{
            "validation_split": 0.2,
            "batch_size": 4,
            "shuffle": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "_metrics": [
        "accuracy"
    ],
    "metrics": [
        "accuracy",
        "iou"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": false
    }
}
